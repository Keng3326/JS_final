<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="header">
      <a href="/"><h1>Lativ</h1></a>
      <ul class="menu">
        <li><a href="/"><img src="/img/home.png" style="width:15px;">
          首頁</a></li>
        <li><a href="/login"><img src="/img/login.png" style="width:15px;">
          會員登入</a></li>
        <li><a href="/manage"><img src="/img/manage.png" style="width:15px;">
          新增商品</a></li> 
        <li><a href="/favorite" style="border-right: none;"><img src="/img/favorite.png" style="width:15px;">
          我的最愛</a></li> 
      </ul>
    </div>
    <div class="clear"></div>
    <div class="content">
      <h2><%= title %></h2>
      <ul class="favoriteList">
        <% for(var i = 0; i < data.length; i++){ %>
          <% var date = new Date(data[i].date.toDate()) %>
          <% var y = date.getFullYear() + '/'; %>
          <% var m = date.getMonth() + '/'; %>
          <% var d = date.getDate(); %>
          <li>
            <a href="/detail?id=<%- data[i].id %>" class="favoriteLink">
              <img src="<%- data[i].image %>" style="width: 130px;">
            </a>
            <img class="deleteFavorite" src="/img/delete2.png" style="width: 15px;">
            <p><%- data[i].name %></p>
            <p>NT$<%- data[i].price %></p>
            <p class="favoriteDate"><%- y+m+d %></p>   
          </li>
        <% } %>
      </ul>
    </div>
    <div class="clear"></div>
  </body>
</html>
